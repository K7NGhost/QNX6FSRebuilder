<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="QNX6FSRebuilder.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QNX6FSRebuilder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:local1="using:QNX6FSRebuilder.UI.ViewModels"
    Title="QNX6 File System Rebuilder">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <StackPanel>
                <TextBlock Text="QNX6 File System Rebuilder" 
                          Style="{StaticResource TitleTextBlockStyle}" 
                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                <TextBlock Text="Parse and rebuild QNX6 file systems from disk images" 
                          Style="{StaticResource BodyTextBlockStyle}" 
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                          Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Input Section -->
        <Border Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                Padding="24,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!-- Disk Image Path Section -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="Disk Image Source" 
                              Style="{StaticResource BodyStrongTextBlockStyle}" 
                              Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DiskImagePathTextBox" 
                                Grid.Column="0"
                                PlaceholderText="Select QNX6 disk image file..."
                                Margin="0,0,8,0"
                                Text="{x:Bind ViewModel.SelectedFilePath, Mode=OneWay}"/>
                        <Button x:Name="BrowseButton" 
                               Grid.Column="1"
                               Content="Browse"
                               Style="{StaticResource AccentButtonStyle}"
                               Command="{x:Bind ViewModel.BrowseFileCommand}"/>
                    </Grid>

                    <TextBlock Text="Extracted Files Output" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0, 20, 0, 8"></TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ExtractedFilesOutputTextBox" Grid.Column="0" PlaceholderText="Select output path for extracted files" Margin="0,0,8,0" Text="{x:Bind ViewModel.SelectedOutputPath, Mode=OneWay}"></TextBox>
                        <Button x:Name="BrowseOutputPathButton" Grid.Column="1" Content="Browse" Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.BrowseOutputPathCommand}"></Button>
                    </Grid>
                </StackPanel>

                <!-- Options Section -->
                <Border Grid.Row="0" Grid.Column="1" 
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel>
                        <TextBlock Text="Options" 
                                  Style="{StaticResource BodyStrongTextBlockStyle}" 
                                  Margin="0,0,0,12" />


                        <TextBlock Text="Select Partition(s)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Margin="0, 0, 0, 4"></TextBlock>
                        <ListView x:Name="PartitionListView"
                                    ItemsSource="{x:Bind ViewModel.Partitions, Mode=OneWay}"
                                    SelectionMode="Multiple"
                                    IsEnabled="{x:Bind ViewModel.IsOptionsEnabled, Mode=OneWay}"
                                    Height="120"
                                    SelectionChanged="PartitionListView_SelectionChanged"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local1:PartitionViewModel">
                                    <StackPanel Orientation="Horizontal" Padding="8,4">
                                        <TextBlock Text="{x:Bind DisplayName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                           Orientation="Horizontal" 
                           Margin="0,20,0,0">
                    <Button x:Name="ProcessButton" 
                           Content="Process entire image" 
                           Style="{StaticResource AccentButtonStyle}"
                           Padding="24,8"
                           Margin="0,0,12,0" 
                           Command="{x:Bind ViewModel.ProcessCommand}"/>
                    <Button Content="Get partitions" Style="{StaticResource AccentButtonStyle}" Padding="24, 8" Margin="0,0,12,0" Command="{x:Bind ViewModel.GetPartitionsCommand}"></Button>
                    <Button Content="Process partitions" Style="{StaticResource AccentButtonStyle}" Padding="24, 8" Margin="0,0,12,0" Command="{x:Bind ViewModel.ParseSelectedPartitionsCommand}"></Button>
                    <Button x:Name="CancelButton" 
                           Content="Cancel" 
                           IsEnabled="False"
                           Padding="16,8"
                           Margin="0,0,12,0" />
                    <Button x:Name="ClearLogButton" 
                           Content="Clear Log" 
                           Padding="16,8"
                           Command="{x:Bind ViewModel.ClearLogCommand}"/>
                </StackPanel>

                <!-- Progress Section -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                           Margin="0,16,0,0"
                           Visibility="Collapsed"
                           x:Name="ProgressSection">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ProgressStatusText" 
                                  Grid.Column="0"
                                  Text="{x:Bind ViewModel.ProgressStatusText}"
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock x:Name="ProgressPercentageText" 
                                  Grid.Column="1"
                                  Text="{x:Bind ViewModel.ProgressPercentageText}"
                                  Style="{StaticResource BodyTextBlockStyle}" />
                    </Grid>
                    <ProgressBar x:Name="MainProgressBar" 
                                Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}" 
                                Maximum="100"
                                Height="6" />
                </StackPanel>
            </Grid>
        </Border>

        <controls:GridSplitter Grid.Row="2"></controls:GridSplitter>

        <!-- Terminal/Log Section -->
        <Border Grid.Row="3" 
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="0,1,0,0"
               Padding="24,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Terminal Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                              Text="Process Information" 
                              Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="SaveLogButton" 
                               Content="Save Log"
                               Style="{StaticResource DefaultButtonStyle}"
                               Margin="0,0,8,0"
                               Padding="12,4" />
                        <ToggleButton x:Name="AutoScrollToggle" 
                                     Content="Auto-scroll"
                                     IsChecked="True"
                                     Padding="12,4" />
                    </StackPanel>
                </Grid>

                <!-- Terminal Area -->
                <Border Grid.Row="1" 
                       Background="Black"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="4">
                    <ListView x:Name="LogListView"
          ItemsSource="{x:Bind ViewModel.LogEntries, Mode=OneWay}"
          IsItemClickEnabled="False"
          SelectionMode="None"
          IsTabStop="False"
          Background="Black"
          BorderThickness="0"
          Padding="0"
          ScrollViewer.HorizontalScrollMode="Enabled"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollMode="Enabled"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
                             >

                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Vertical"
                             AreStickyGroupHeadersEnabled="False"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{Binding}"
                       FontFamily="Consolas, Courier New"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       Padding="4,2" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
               Background="{ThemeResource LayerFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="0,1,0,0"
               Padding="24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" 
                          Grid.Column="0"
                          Text="{x:Bind ViewModel.StatusText}"
                          Style="{StaticResource CaptionTextBlockStyle}"
                          VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="FileCountText" 
                              Text="{x:Bind ViewModel.FileCount, Mode=OneWay}"
                              Style="{StaticResource CaptionTextBlockStyle}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0" />
                    <TextBlock x:Name="TimestampText" 
                              Text="{x:Bind ViewModel.TimestampText, Mode=OneWay}"
                              Style="{StaticResource CaptionTextBlockStyle}"
                              VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
